from manim import *

class ShapeTransformation(Scene):
    def construct(self):
        # 1. 創造一個紅色的圓
        circle = Circle()
        circle.set_fill(RED, opacity=0.5)
        circle.set_stroke(RED_E, width=4)

        # 2. 創造一個藍色的正方形
        square = Square()
        square.set_fill(BLUE, opacity=0.5)
        square.set_stroke(BLUE_E, width=4)

        # 3. 把圓顯示在螢幕上 (持續 1 秒)
        self.play(Create(circle))
        self.wait()

        # 4. 把圓變成正方形 (持續 2 秒)
        self.play(Transform(circle, square), run_time=2)
        self.wait()

        # 5. 讓圖形淡出消失
        self.play(FadeOut(circle))
